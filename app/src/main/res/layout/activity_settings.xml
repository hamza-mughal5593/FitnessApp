<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".v1.activity.setting.SettingsActivity">

    <View
        android:id="@+id/view12"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:background="@drawable/bg_rounded_orenge_bottom_only"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_rounded_white_outline_grey"
        app:layout_constraintBottom_toBottomOf="@+id/cv_ah_avatar"
        app:layout_constraintEnd_toEndOf="@+id/cv_ah_avatar"
        app:layout_constraintStart_toStartOf="@+id/cv_ah_avatar"
        app:layout_constraintTop_toTopOf="@+id/cv_ah_avatar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ah_avatar"
        android:layout_width="78dp"
        android:layout_height="78dp"
        app:cardCornerRadius="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_ah_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_ah_avatar"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:src="@drawable/ic_avatar_man" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_ah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_ah_location"
        app:layout_constraintEnd_toEndOf="@+id/cv_ah_avatar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/cv_ah_avatar"
        app:layout_constraintTop_toBottomOf="@+id/cv_ah_avatar" />

    <TextView
        android:id="@+id/tv_ah_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Subang Jaya"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/view12"
        app:layout_constraintEnd_toEndOf="@+id/tv_ah_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_ah_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_ah_name" />

    <View
        android:id="@+id/v_as_personal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#fff"
        android:background="@drawable/bg_rounded_white_outline_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view12" />

    <View
        android:id="@+id/v_as_faq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#fff"
        android:background="@drawable/bg_rounded_white_outline_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_as_personal" />

    <View
        android:id="@+id/v_as_signout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#fff"
        android:background="@drawable/bg_rounded_white_outline_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_as_tnc" />

    <View
        android:id="@+id/v_as_tnc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#fff"
        android:background="@drawable/bg_rounded_white_outline_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_as_feedback" />

    <View
        android:id="@+id/v_as_feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#fff"
        android:background="@drawable/bg_rounded_white_outline_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_as_faq" />

    <TextView
        android:id="@+id/tv_am_version_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/profile"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_personal"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/v_as_personal" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="FAQ"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_faq"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/v_as_faq" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/feedback"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_feedback"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/v_as_feedback" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Privacy Policy"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_tnc"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/v_as_tnc" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/signout"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_signout"
        app:layout_constraintStart_toEndOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/v_as_signout" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:scaleType="fitCenter"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_personal"
        app:layout_constraintStart_toStartOf="@+id/v_as_personal"
        app:layout_constraintTop_toTopOf="@+id/v_as_personal"
        android:src="@drawable/ic_user" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:scaleType="fitCenter"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_faq"
        app:layout_constraintStart_toStartOf="@+id/v_as_faq"
        app:layout_constraintTop_toTopOf="@+id/v_as_faq"
        android:src="@drawable/ic_information" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_survey"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_feedback"
        app:layout_constraintStart_toStartOf="@+id/v_as_faq"
        app:layout_constraintTop_toTopOf="@+id/v_as_feedback" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_accept"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_tnc"
        app:layout_constraintStart_toStartOf="@+id/v_as_faq"
        app:layout_constraintTop_toTopOf="@+id/v_as_tnc" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:scaleType="fitCenter"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/v_as_signout"
        app:layout_constraintStart_toStartOf="@+id/v_as_signout"
        app:layout_constraintTop_toTopOf="@+id/v_as_signout"
        android:src="@drawable/ic_logout" />

</androidx.constraintlayout.widget.ConstraintLayout>